    ol.breadcrumb
      li.breadcrumb-item
        a(href='#') Home
      li.breadcrumb-item.active Create Quiz
    .container
      .row
        .col-md-3
        .col-md-6
          form
            label Quiz Title: 
            input.form-control(type='text', placeholder='Quiz Title')
            label Description: 
            input.form-control(type='text', placeholder='Description')
            label Visibility
            .radio
              input#yesChoice(name='visibility', type='radio', checked='')
              label.radio-label(for='yesChoice') Yes
            .radio
              input#noChoice(name='visibility', type='radio')
              label.radio-label(for='noChoice') No
            .form-group
              label Question No:
              p Prompt
        .col-md-3
      .row
        .modal-frame
          .modal
            form
              .modal-inset
                .button.close
                  i.fa.fa-close
                .modal-body
                  .row
                    .col-md-2
                    .col-md-4
                      label Prompt: 
                      input.form-control(type='text')
                    .col-md-4
                      .radio
                        input#mcq(name='choice', type='radio', checked='')
                        label.radio-label(for='mcq') MCQ
                      .radio
                        input#shortans(name='choice', type='radio')
                        label.radio-label(for='shortans') Short Answer
                    .col-md-2
                  .row
                    #mcqSection.row.selection
                      .row
                        .col-md-6
                          input#choice1.form-control(type='text')
                          input#filled-in-box.filled-in(type='checkbox')
                          label(for='filled-in-box') Filled in
                        .col-md-6
                          input#choice2.form-control(type='textarea', name='choices')
                          input#filled-in-box2.filled-in(type='checkbox')
                          label(for='filled-in-box2') Filled in
                      .row
                        .col-md-6
                          input#choice3.form-control(type='textarea', name='choices')
                          input#filled-in-box3.filled-in(type='checkbox', name='solution')
                          label(for='filled-in-box3') Filled in
                        .col-md-6
                          input#choice4.form-control(type='textarea', name='choices')
                          input#filled-in-box4.filled-in(type='checkbox', name='solution')
                          label(for='filled-in-box4') Filled in
                  .row
                    .col-md-6
                      select#time.browser-default(name='time')
                        option(value='', disabled='', selected='') Select your timing
                        option(value='5') 5 seconds
                        option(value='10') 10 seconds
                        option(value='15') 15 seconds
                        option(value='20') 20 seconds
                    .col-md-6
                      label Specific Reward: 
                      input#specificReward.form-control(type='text')
                  .row
                    .col-md-6
                      label Specific Penalty: 
                      input#specificPenatly.form-control(type='text')
                    .col-md-6
                      input(type='button', name='clear', value='Clear')
                      input#addQuestion(type='submit', name='submit', value='Add Question')
        .modal-overlay
        button.fancy-btn.open Add Question
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type='text/javascript').
      $(document).on('ready', function(){
      $modal = $('.modal-frame');
      $overlay = $('.modal-overlay');
      /* Need this to clear out the keyframe classes so they dont clash with each other between ener/leave. Cheers. */
      $modal.bind('webkitAnimationEnd oanimationend msAnimationEnd animationend', function(e){
      if($modal.hasClass('state-leave')) {
      $modal.removeClass('state-leave');
      }
      });
      $('.close').on('click', function(){
      $overlay.removeClass('state-show');
      $modal.removeClass('state-appear').addClass('state-leave');
      });
      $('.open').on('click', function(){
      $overlay.addClass('state-show');
      $modal.removeClass('state-leave').addClass('state-appear');
      });
      });
